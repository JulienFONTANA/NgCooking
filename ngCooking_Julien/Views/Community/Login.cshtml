@model ngCooking_Julien.Models.LogViewModel

<h1 class="page-title">Bienvenue!</h1>
<div class="row" id="loginView">
    <h2 class="title">~ Connexion ~</h2>
    <div class="col-xs-12">
        <div class="panel">
            <div class="row imgback">
                <div class="hidden-xs col-sm-3"></div>
                <div class="col-xs-12 col-sm-9 fp">
                    <div class="filters">
                        @using (Html.BeginForm("Login", "Community", new { id = "ConnectForm" }))
                        {
                            <div class="filter">
                                <p><label for="co_user" class="fwb">Identifiant (email)</label></p>
                                @Html.TextBoxFor(t => t.mail, new { id = "co_user", @class = "wide", type = "text" })
                            </div>
                            <div class="filter">
                                <p><label for="co_pwd" class="fwb">Mot de passe</label></p>
                                @Html.PasswordFor(m => m.password, new { id = "co_pwd", @class = "wide", type = "password" })
                            </div>
                            <p class="nm mt2">
                                <button type="submit" class="btn btn_big btn_color1">
                                    <span class="glyphicon glyphicon-ok"></span><span class="fwb uc">Valider</span>
                                </button>
                            </p>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
